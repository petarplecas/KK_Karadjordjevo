---
import { ViewTransitions } from 'astro:transitions';

interface Props {
  title: string;
  description?: string;
  image?: string;
  type?: 'website' | 'article';
  publishedTime?: string;
}

const {
  title,
  description = 'Košarkaški klub Karađorđevo - Zvanični sajt',
  image = '/og-image.jpg',
  type = 'website',
  publishedTime
} = Astro.props;

// Construct canonical URL
const canonicalURL = new URL(Astro.url.pathname, Astro.site || 'https://kkkaradjordjevo.com');

// Construct absolute image URL
const imageURL = new URL(image, Astro.site || 'https://kkkaradjordjevo.com');
---

<!DOCTYPE html>
<html lang="sr" data-theme="kktheme">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />

    <!-- Preconnect to Google Fonts for better performance -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />

    <!-- Load Tailwind CSS and Global Styles -->
    <link rel="stylesheet" href="/src/styles/global.css" />

    <!-- Primary Meta Tags -->
    <meta name="description" content={description} />
    <meta name="generator" content={Astro.generator} />
    <title>{title} | KK Karađorđevo</title>

    <!-- Canonical URL -->
    <link rel="canonical" href={canonicalURL} />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content={type} />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={`${title} | KK Karađorđevo`} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={imageURL} />
    <meta property="og:locale" content="sr_RS" />
    <meta property="og:site_name" content="KK Karađorđevo" />
    {publishedTime && <meta property="article:published_time" content={publishedTime} />}

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:url" content={canonicalURL} />
    <meta name="twitter:title" content={`${title} | KK Karađorđevo`} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={imageURL} />

    <ViewTransitions />
  </head>
  <body class="bg-slate-900 text-kk-text-primary min-h-screen flex flex-col">
    <slot />
  </body>
</html>
