---
import { truncateText } from '../../utils/truncateText';
import { formatDateShort } from '../../utils/formatDate';

interface Props {
  title: string;
  date: Date;
  excerpt: string;
  slug: string;
}

const { title, date, excerpt, slug } = Astro.props;
---

<article class="bg-white rounded-lg shadow-md hover:shadow-xl transition-all duration-300 p-6 flex flex-col h-full">
  <h3 class="font-bold text-xl mb-2 text-kk-dark hover:text-kk-primary transition line-clamp-2">
    <a href={`/vesti/${slug}`}>{title}</a>
  </h3>
  <time class="text-sm text-gray-500 mb-3">{formatDateShort(date)}</time>
  <p class="text-gray-700 mb-4 flex-grow line-clamp-4">{excerpt}</p>
  <a href={`/vesti/${slug}`} class="btn btn-primary btn-sm self-start">
    Pročitaj više →
  </a>
</article>
