---
import { truncateText } from '../../utils/truncateText';
import { formatDateShort } from '../../utils/formatDate';

interface Props {
  title: string;
  date: Date | null;
  excerpt: string;
  id: string;
  baseUrl?: string;
  currentPage?: number;
}

const { title, date, excerpt, id, baseUrl = '/vesti', currentPage = 1 } = Astro.props;
// Only add page parameter for vesti (news) pages
const linkUrl = baseUrl === '/vesti' ? `${baseUrl}/${id}?page=${currentPage}` : `${baseUrl}/${id}`;
---

<article class="group relative overflow-hidden rounded-2xl glass border border-kk-border/20 hover:border-kk-accent/50 transition-all duration-500 p-6 flex flex-col h-full hover:shadow-glow-amber">
  <!-- Gradient overlay that appears on hover -->
  <div class="absolute inset-0 bg-gradient-to-br from-kk-accent/5 to-kk-accent-blue/5 opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>

  <!-- Animated gradient border (shows on hover) -->
  <div class="absolute inset-0 rounded-2xl opacity-0 group-hover:opacity-100 transition-opacity duration-500 pointer-events-none">
    <div class="absolute inset-0 rounded-2xl bg-gradient-to-r from-kk-accent/50 via-kk-accent-blue/50 to-kk-accent/50 blur-sm"></div>
  </div>

  <!-- Content -->
  <div class="relative z-10 flex flex-col h-full">
    <h3 class="font-display font-bold text-xl sm:text-2xl mb-3 text-kk-text-primary group-hover:text-gradient transition-all duration-300 line-clamp-2">
      <a href={linkUrl} class="hover:underline decoration-kk-accent decoration-2 underline-offset-4">
        {title}
      </a>
    </h3>

    <time class="text-sm text-kk-accent mb-4 font-medium flex items-center gap-2">
      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
      </svg>
      {date ? formatDateShort(date) : ''}
    </time>

    <p class="text-kk-text-secondary mb-6 flex-grow line-clamp-4 leading-relaxed">
      {excerpt}
    </p>

    <!-- CTA Button with gradient and glow -->
    <a
      href={linkUrl}
      class="relative inline-flex items-center gap-2 px-5 py-2.5 bg-gradient-to-r from-kk-accent to-amber-600 text-slate-900 font-semibold rounded-lg overflow-hidden group/btn self-start transition-all duration-300 hover:shadow-glow-amber hover:-translate-y-0.5"
    >
      <span class="relative z-10 flex items-center gap-2">
        Pročitaj više
        <svg class="w-4 h-4 transition-transform duration-300 group-hover/btn:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
        </svg>
      </span>
      <!-- Hover gradient overlay -->
      <div class="absolute inset-0 bg-gradient-to-r from-amber-400 to-amber-500 translate-y-full group-hover/btn:translate-y-0 transition-transform duration-300"></div>
    </a>
  </div>
</article>
