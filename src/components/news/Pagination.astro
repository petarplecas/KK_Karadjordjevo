---
interface Props {
  currentPage: number;
  totalPages: number;
  baseUrl: string;
}

const { currentPage, totalPages, baseUrl } = Astro.props;
---

<nav class="flex justify-center items-center gap-4 mt-8" aria-label="Pagination">
  {currentPage > 1 && (
    <a href={`${baseUrl}/${currentPage - 1}`} class="btn btn-outline btn-primary">
      ← Prethodna
    </a>
  )}

  <span class="px-4 py-2 text-gray-700 font-medium">
    Strana {currentPage} od {totalPages}
  </span>

  {currentPage < totalPages && (
    <a href={`${baseUrl}/${currentPage + 1}`} class="btn btn-outline btn-primary">
      Sledeća →
    </a>
  )}
</nav>
