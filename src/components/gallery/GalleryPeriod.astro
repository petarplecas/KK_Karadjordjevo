---
import type { GalleryPeriod } from '../../types/gallery';

interface Props {
  period: GalleryPeriod;
  isFirst?: boolean;
}

const { period, isFirst = false } = Astro.props;

const accentClasses = period.accentColor === 'amber'
  ? 'border-kk-accent text-kk-accent shadow-glow-amber'
  : 'border-kk-accent-blue text-kk-accent-blue shadow-glow-blue';

const gradientClasses = period.accentColor === 'amber'
  ? 'from-kk-accent/10 to-transparent'
  : 'from-kk-accent-blue/10 to-transparent';

const subtitleColor = period.accentColor === 'amber' ? 'text-kk-accent' : 'text-kk-accent-blue';
---

<!-- Spacing between periods (skip for first) -->
{!isFirst && <div class="my-12 sm:my-16"></div>}

<!-- Period Header -->
<div id={`year-${period.year}`} class="relative mb-8 sm:mb-12 scroll-mt-24">
  <!-- Gradient background accent -->
  <div class={`absolute inset-0 bg-gradient-to-r ${gradientClasses} rounded-lg opacity-20`}></div>

  <!-- Content -->
  <div class={`relative glass rounded-lg p-6 sm:p-8 border-l-4 ${accentClasses}`}>
    <!-- Years badge -->
    <div class={`inline-block px-4 py-1 rounded-full text-sm font-bold mb-3 ${accentClasses}`}>
      {period.year}
    </div>

    <!-- Title -->
    <h2 class="font-display font-bold text-2xl sm:text-3xl lg:text-4xl text-kk-text-primary mb-2">
      {period.title}
    </h2>

    <!-- Subtitle with stats -->
    <p class={`text-lg sm:text-xl font-semibold mb-3 ${subtitleColor}`}>
      {period.eventCount} događaja • {period.totalImages} slika
    </p>

    <!-- Description -->
    <p class="text-kk-text-secondary text-base sm:text-lg leading-relaxed">
      {period.description}
    </p>
  </div>
</div>
