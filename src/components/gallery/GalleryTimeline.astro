---
import GalleryPeriod from './GalleryPeriod.astro';
import GalleryEvent from './GalleryEvent.astro';
import type { GalleryPeriod as GalleryPeriodType } from '../../types/gallery';

interface Props {
  periods: GalleryPeriodType[];
}

const { periods } = Astro.props;
---

<!-- Timeline Container -->
<section class="timeline-container py-12 sm:py-16 relative">
  <!-- Desktop: Central vertical line -->
  <div class="hidden lg:block absolute left-1/2 top-0 bottom-0 w-0.5 bg-gradient-to-b from-kk-border via-kk-border/50 to-transparent transform -translate-x-1/2"></div>

  <!-- Timeline Content -->
  <div class="max-w-6xl mx-auto">
    {periods.map((period, periodIndex) => (
      <div class="timeline-period">
        <!-- Period Header -->
        <GalleryPeriod
          period={period}
          isFirst={periodIndex === 0}
        />

        <!-- Period Events -->
        <div class="timeline-events">
          {period.events.map((event, eventIndex) => (
            <GalleryEvent
              event={event}
              isLeft={eventIndex % 2 === 0}
              periodAccent={period.accentColor}
            />
          ))}
        </div>
      </div>
    ))}
  </div>
</section>
