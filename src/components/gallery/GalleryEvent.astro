---
import type { GalleryEvent } from '../../types/gallery';

interface Props {
  event: GalleryEvent;
  isLeft?: boolean;
  periodAccent: 'amber' | 'blue';
}

const { event, isLeft = false, periodAccent } = Astro.props;

// Icon selection based on event type
const eventIcons = {
  turnir: 'M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z',
  utakmica: 'M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z',
  trening: 'M13 10V3L4 14h7v7l9-11h-7z',
  kamp: 'M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6',
  promocija: 'M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z',
  slava: 'M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z',
  mixed: 'M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z',
};

// Category-based marker color
const markerColor = event.category === 'muški'
  ? 'bg-kk-accent border-kk-accent shadow-glow-amber'
  : event.category === 'ženski'
  ? 'bg-kk-accent-blue border-kk-accent-blue shadow-glow-blue'
  : periodAccent === 'amber'
  ? 'bg-kk-accent border-kk-accent shadow-glow-amber'
  : 'bg-kk-accent-blue border-kk-accent-blue shadow-glow-blue';

const cardAccent = event.category === 'muški'
  ? 'border-kk-accent'
  : event.category === 'ženski'
  ? 'border-kk-accent-blue'
  : periodAccent === 'amber'
  ? 'border-kk-accent'
  : 'border-kk-accent-blue';

// Format date for display
const displayDate = event.dateRange || event.date || event.month ?
  (event.dateRange || event.date || `${String(event.month).padStart(2, '0')}.${event.year}`) :
  `${event.year}`;
---

<!-- Timeline Event Container -->
<div class="relative timeline-event">
  <!-- Mobile: Vertical Timeline (default) -->
  <div class="block lg:hidden">
    <!-- Mobile layout with left-aligned timeline -->
    <div class="flex gap-4 sm:gap-6 mb-8">
      <!-- Timeline marker column -->
      <div class="flex flex-col items-center flex-shrink-0">
        <!-- Marker dot -->
        <div class={`w-10 h-10 sm:w-12 sm:h-12 rounded-full ${markerColor} border-4 flex items-center justify-center z-10`}>
          <svg class="w-5 h-5 sm:w-6 sm:h-6 text-slate-900" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d={eventIcons[event.eventType]} />
          </svg>
        </div>

        <!-- Vertical line -->
        <div class="w-0.5 flex-grow bg-gradient-to-b from-kk-border/50 to-transparent mt-2"></div>
      </div>

      <!-- Content column -->
      <div class="flex-grow pb-8">
        <!-- Date badge -->
        <div class="inline-block mb-3">
          <span class="text-sm sm:text-base text-kk-text-secondary">
            {displayDate}
          </span>
        </div>

        <!-- Event card with thumbnail -->
        <a
          href={`/galerija/${event.id}`}
          class={`group glass rounded-lg border-l-4 ${cardAccent} overflow-hidden transition-all duration-300 hover:shadow-lg hover:scale-[1.02] block cursor-pointer`}
        >
          <!-- Thumbnail image -->
          <div class="relative aspect-video overflow-hidden bg-kk-surface/30">
            <img
              data-src={event.coverImage.fullPath}
              src="data:image/gif;base64,R0lGODlhAQABAIAAAAAAAP///yH5BAEAAAAALAAAAAABAAEAAAIBRAA7"
              alt={event.coverImage.alt}
              class="lazy-image w-full h-full object-cover transition-transform duration-500 group-hover:scale-110"
              loading="lazy"
            />
            <!-- Image count badge -->
            <div class="absolute bottom-2 right-2 px-3 py-1 bg-black/70 backdrop-blur-sm rounded-full text-white text-xs font-bold">
              {event.imageCount} {event.imageCount === 1 ? 'slika' : event.imageCount < 5 ? 'slike' : 'slika'}
            </div>
          </div>

          <!-- Card content -->
          <div class="p-4 sm:p-6">
            <h3 class="font-display font-bold text-lg sm:text-xl text-kk-text-primary">
              {event.title}
            </h3>
          </div>
        </a>
      </div>
    </div>
  </div>

  <!-- Desktop: Alternating Timeline (lg and up) -->
  <div class="hidden lg:block">
    <div class="relative mb-12">
      <div class="grid grid-cols-[1fr_auto_1fr] gap-8 items-start">
        <!-- Left content (for left-aligned events) -->
        {isLeft && (
          <div class="text-right">
            <!-- Date badge -->
            <div class="mb-3">
              <span class="text-base text-kk-text-secondary">
                {displayDate}
              </span>
            </div>

            <!-- Event card with thumbnail -->
            <a
              href={`/galerija/${event.id}`}
              class={`group glass rounded-lg border-l-4 ${cardAccent} overflow-hidden transition-all duration-300 hover:shadow-lg hover:scale-[1.02] block cursor-pointer`}
            >
              <!-- Thumbnail image -->
              <div class="relative aspect-video overflow-hidden bg-kk-surface/30">
                <img
                  data-src={event.coverImage.fullPath}
                  src="data:image/gif;base64,R0lGODlhAQABAIAAAAAAAP///yH5BAEAAAAALAAAAAABAAEAAAIBRAA7"
                  alt={event.coverImage.alt}
                  class="lazy-image w-full h-full object-cover transition-transform duration-500 group-hover:scale-110"
                  loading="lazy"
                />
                <!-- Image count badge -->
                <div class="absolute bottom-2 right-2 px-3 py-1 bg-black/70 backdrop-blur-sm rounded-full text-white text-xs font-bold">
                  {event.imageCount} {event.imageCount === 1 ? 'slika' : event.imageCount < 5 ? 'slike' : 'slika'}
                </div>
              </div>

              <!-- Card content -->
              <div class="p-6">
                <h3 class="font-display font-bold text-xl text-kk-text-primary">
                  {event.title}
                </h3>
              </div>
            </a>
          </div>
        )}

        <!-- Empty left space for right-aligned events -->
        {!isLeft && <div></div>}

        <!-- Center timeline marker -->
        <div class="flex justify-center pt-3">
          <div class={`w-12 h-12 rounded-full ${markerColor} border-4 flex items-center justify-center z-10 flex-shrink-0`}>
            <svg class="w-6 h-6 text-slate-900" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d={eventIcons[event.eventType]} />
            </svg>
          </div>
        </div>

        <!-- Right content (for right-aligned events) -->
        {!isLeft && (
          <div class="text-left">
            <!-- Date badge -->
            <div class="mb-3">
              <span class="text-base text-kk-text-secondary">
                {displayDate}
              </span>
            </div>

            <!-- Event card with thumbnail -->
            <a
              href={`/galerija/${event.id}`}
              class={`group glass rounded-lg border-l-4 ${cardAccent} overflow-hidden transition-all duration-300 hover:shadow-lg hover:scale-[1.02] block cursor-pointer`}
            >
              <!-- Thumbnail image -->
              <div class="relative aspect-video overflow-hidden bg-kk-surface/30">
                <img
                  data-src={event.coverImage.fullPath}
                  src="data:image/gif;base64,R0lGODlhAQABAIAAAAAAAP///yH5BAEAAAAALAAAAAABAAEAAAIBRAA7"
                  alt={event.coverImage.alt}
                  class="lazy-image w-full h-full object-cover transition-transform duration-500 group-hover:scale-110"
                  loading="lazy"
                />
                <!-- Image count badge -->
                <div class="absolute bottom-2 right-2 px-3 py-1 bg-black/70 backdrop-blur-sm rounded-full text-white text-xs font-bold">
                  {event.imageCount} {event.imageCount === 1 ? 'slika' : event.imageCount < 5 ? 'slike' : 'slika'}
                </div>
              </div>

              <!-- Card content -->
              <div class="p-6">
                <h3 class="font-display font-bold text-xl text-kk-text-primary">
                  {event.title}
                </h3>
              </div>
            </a>
          </div>
        )}

        <!-- Empty right space for left-aligned events -->
        {isLeft && <div></div>}
      </div>
    </div>
  </div>
</div>

<style>
  /* Lazy loading shimmer effect */
  .lazy-image {
    background: linear-gradient(
      90deg,
      rgba(255, 255, 255, 0.05) 25%,
      rgba(255, 255, 255, 0.1) 50%,
      rgba(255, 255, 255, 0.05) 75%
    );
    background-size: 200% 100%;
    animation: shimmer 1.5s infinite;
  }

  @keyframes shimmer {
    0% {
      background-position: -200% 0;
    }
    100% {
      background-position: 200% 0;
    }
  }
</style>

<script>
  function initLazyLoading() {
    // Intersection Observer for lazy loading images
    const observer = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          const img = entry.target as HTMLImageElement;
          const src = img.getAttribute('data-src');
          if (src) {
            img.src = src;
            img.classList.remove('lazy-image');
            observer.unobserve(img);
          }
        }
      });
    }, {
      rootMargin: '200px' // Start loading 200px before viewport
    });

    // Observe all lazy images
    document.querySelectorAll('.lazy-image').forEach(img => observer.observe(img));
  }

  // Initialize on first load
  initLazyLoading();

  // Re-initialize after Astro view transitions
  document.addEventListener('astro:page-load', () => {
    initLazyLoading();
  });
</script>
