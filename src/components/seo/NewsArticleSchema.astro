---
/**
 * Schema.org NewsArticle structured data for Google Rich Results
 * Enables article cards in search results with images, dates, and publisher info
 */

interface Props {
  title: string;
  description: string;
  image?: string;
  datePublished: string;
  dateModified?: string;
  url: string;
}

const {
  title,
  description,
  image = '/og-image.jpg',
  datePublished,
  dateModified = datePublished,
  url
} = Astro.props;

// Construct absolute URLs
const siteUrl = Astro.site || 'https://kkkaradjordjevo.com';
const absoluteUrl = new URL(url, siteUrl).href;
const absoluteImageUrl = new URL(image, siteUrl).href;
const logoUrl = new URL('/logo.png', siteUrl).href;

const schema = {
  "@context": "https://schema.org",
  "@type": "NewsArticle",
  "headline": title,
  "description": description,
  "image": absoluteImageUrl,
  "datePublished": datePublished,
  "dateModified": dateModified,
  "author": {
    "@type": "Organization",
    "name": "KK Karađorđevo",
    "url": siteUrl
  },
  "publisher": {
    "@type": "SportsOrganization",
    "name": "Košarkaški klub Karađorđevo",
    "logo": {
      "@type": "ImageObject",
      "url": logoUrl
    },
    "url": siteUrl,
    "sport": "Basketball"
  },
  "mainEntityOfPage": {
    "@type": "WebPage",
    "@id": absoluteUrl
  },
  "articleSection": "Basketball News",
  "inLanguage": "sr-RS"
};
---

<script type="application/ld+json" set:html={JSON.stringify(schema)} />
