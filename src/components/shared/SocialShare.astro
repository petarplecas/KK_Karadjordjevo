---
import ShareMenu from '../islands/ShareMenu';

interface Props {
  title: string;
  url: string;
  description?: string;
  image?: string;
  hashtags?: string[];
}

const { title, url, description, image, hashtags = ['KKKaradjordjevo', 'kosarka'] } = Astro.props;

// Prepare text for sharing
const shareText = description || title;
---

<div class="flex flex-wrap gap-3 items-center">
  <span class="text-kk-accent font-semibold flex items-center gap-2">
    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.684 13.342C8.886 12.938 9 12.482 9 12c0-.482-.114-.938-.316-1.342m0 2.684a3 3 0 110-2.684m0 2.684l6.632 3.316m-6.632-6l6.632-3.316m0 0a3 3 0 105.367-2.684 3 3 0 00-5.367 2.684zm0 9.316a3 3 0 105.368 2.684 3 3 0 00-5.368-2.684z" />
    </svg>
    Podeli:
  </span>

  <!-- Unified Share Menu -->
  <ShareMenu
    client:only="preact"
    title={title}
    text={shareText}
    url={url}
    image={image}
    hashtags={hashtags}
  />
</div>
